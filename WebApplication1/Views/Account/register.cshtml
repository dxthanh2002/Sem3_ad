@{
    Layout = null;
}



<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login Page</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f4f4f4;
            margin: 0;
            display: flex;
            align-items: center;
            justify-content: center;
            height: 100vh;
        }

        .login-container {
            width: 25%;
            background-color: #fff;
            padding: 20px;
            border-radius: 8px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }

            .login-container h2 {
                text-align: center;
            }




        .form-input {
            border: 1px solid #eee;
            border-radius: 4px;
            width: 100%;
            height: 35px;
            font-size: 14px;
            transition: 0.25s ease;
            padding: 0 10px
        }

            .form-input:focus {
                border-color: #6a5af9
            }

            .form-input:focus-visible {
                outline: none;
                border-color: #6a5af9
            }

        .form-field-input {
            margin-bottom: 20px;
            position: relative
        }

        .form-label-input {
            position: absolute;
            top: 50%;
            transform: translateY(-50%);
            left: 21px;
            user-select: none;
            font-size: 13px;
            color: #999;
            pointer-events: none;
            transition: 0.25s ease
        }


        .form-input:not(:placeholder-shown) + .form-label-input, .form-input:focus + .form-label-input {
            top: 0;
            padding: 0 5px;
            display: inline-block;
            background-color: white;
            color: #6a5af9;
        }

        .button-click {
            color: #fff;
            padding: 10px 40px;
            font-size: 14px;
            border-radius: 6px;
            background: #6a5af9;
            transition: all 0.2s ease;
            border: 1px solid #4a37f7fa;
        }

            .button-click:active {
                transform: scale(0.96);
            }
    </style>
</head>
<body>

    <div class="login-container">
        <h2>Register</h2>
        <form action="/Account/register" method="post">
            <div class="form-field-input">
                <input type="text" class="form-input" name="username" placeholder="" autocomplete="off" />
                <label class="form-label-input">Username</label>
            </div>

            <div class="form-field-input">
                <input type="text" class="form-input" name="email" placeholder="" autocomplete="off" />
                <label class="form-label-input">Email</label>
            </div>

            <div class="form-field-input">
                <input type="text" class="form-input" name="password" placeholder="" autocomplete="off" />
                <label class="form-label-input">Password</label>
            </div>

            <div class="form-field-input">
                <input type="text" class="form-input" name="confirmPassword" placeholder="" autocomplete="off" />
                <label class="form-label-input">Confirm password</label>
            </div>

            @if (ViewBag.Message != null)
            {
                <div id="message" style="color:red;margin-bottom: 10px;">@ViewBag.Message</div>
            }
            <div style="text-align: center;">
                <button type="submit" class="button-click">Submit</button>
            </div>
            <div style="text-align: center;margin:20px">
                <div><span>Bạn đã có tài khoản? <a href="/Account/OnPostLogin" style="color:#4a37f7fa;text-decoration:none">Đăng nhập.</a></span></div>
            </div>
        </form>
    </div>

</body>
</html>
