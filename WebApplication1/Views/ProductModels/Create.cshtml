@model WebApplication1.Models.ProductModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>ProductModel</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <div>
                    <input asp-for="Name" class="form-control" id="name" style="position:relative" onblur="hideDiv()" onfocus="showDiv()" autocomplete="off" />
                    <div style="background:#fff;z-index:2;position:absolute;width: 50%;display:none" id="idDivName">
                        <table>
                            <thead>
                                <tr>
                                    <th>Stt</th>
                                    <th>col 1</th>
                                    <th>col 2</th>
                                    <th>col 3</th>
                                </tr>
                            </thead>
                            <tbody id="tableBody">
                                <tr>
                                    <td>1</td>
                                    <td>row 1.1</td>
                                    <td>row 1.2</td>
                                    <td>row 1.3</td>
                                </tr>
                                <tr>
                                    <td>2</td>
                                    <td>row 2.1</td>
                                    <td>row 2.2</td>
                                    <td>row 2.3</td>
                                </tr>
                                <tr>
                                    <td>3</td>
                                    <td>row 3.1</td>
                                    <td>row 3.2</td>
                                    <td>row 3.3</td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Images" class="control-label"></label>
                <input asp-for="Images" class="form-control" />
                <span asp-validation-for="Images" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Price" class="control-label"></label>
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Quantity" class="control-label"></label>
                <input asp-for="Quantity" class="form-control" />
                <span asp-validation-for="Quantity" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="seasonid" class="control-label"></label>
                <select asp-for="seasonid" class ="form-control" asp-items="ViewBag.seasonid"></select>
            </div>
            <div class="form-group">
                <label asp-for="GendersId" class="control-label"></label>
                <select asp-for="GendersId" class ="form-control" asp-items="ViewBag.GendersId"></select>
            </div>
            <div class="form-group">
                <label asp-for="Ages" class="control-label"></label>
                <input asp-for="Ages" class="form-control" />
                <span asp-validation-for="Ages" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RewardPoint" class="control-label"></label>
                <input asp-for="RewardPoint" class="form-control" />
                <span asp-validation-for="RewardPoint" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>
<script>
    // Function to show the div when input is focused
    function showDiv() {
        var div = document.getElementById("idDivName");
        div.style.display = 'block';
    }


    function hideDiv() {
        var div = document.getElementById("idDivName");
        div.style.display = 'none';
    }

    var rows = document.getElementById('tableBody').getElementsByTagName('tr');
    for (var i = 0; i < rows.length; i++) {
        rows[i].addEventListener('click', function () {
            handleRowClick(this);
        });
    }

    // Function to handle row click
    function handleRowClick(row) {
        alert('Clicked row ' + row.cells[0].innerText); // Example action, you can replace this with your desired action
    }
</script>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
